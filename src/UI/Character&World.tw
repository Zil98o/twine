:: PlayerPage[noreturn]
<h2 style="text-align: right; text-decoration: underline; font-family: var(--cursive); color: red; font-size: 2rem;">Player Page</h2>
<center><h3>Personality</h3></center>\
\
<<set $pC.emp = 100 - $pC.pr>>\
<div class="stat-bar-group">\
<div class="stat-bar-container">\
<div class="stat-bar-overlay-left">Empathetic $pC.emp%</div>\
<div class="stat-bar-overlay-right">Pragmatic $pC.pr%</div>\
<div class="stat-bar" id="emph-stat"></div></div></div>\
\
<<set $pC.sb = 100 - $pC.cp>>\
<div class="stat-bar-group">\
<div class="stat-bar-container">\
<div class="stat-bar-overlay-left">Stubborn $pC.sb%</div>\
<div class="stat-bar-overlay-right">Compliant $pC.cp%</div>\
<div class="stat-bar" id="stub-stat"></div></div></div>\
\
<<set $pC.tr = 100 - $pC.su>>\
<div class="stat-bar-group">\
<div class="stat-bar-container">\
<div class="stat-bar-overlay-left">Trusting $pC.tr%</div>\
<div class="stat-bar-overlay-right">Suspicious $pC.su%</div>\
<div class="stat-bar" id="trust-stat"></div></div></div>\
\
\
<<set $pC.mp = 100 - $pC.hn>>\
<div class="stat-bar-group">\
<div class="stat-bar-container">\
<div class="stat-bar-overlay-left">Manipulative $pC.mp%</div>\
